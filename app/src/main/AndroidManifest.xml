<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="conor.nolan.ancientgames">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_caeser"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_caeser"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".HomeScreenActivity"></activity>
        <activity
            android:name=".quiz.QuizLeaderboard"
            android:label="@string/title_activity_quiz_leaderboard"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar" />

        <uses-library
            android:name="android.test.runner"
            android:required="false" />

        <activity android:name=".quiz.LearningMode.QuizGameLearnMode" />
        <activity android:name=".quiz.QuizSelectMode" />
        <activity
            android:name=".quiz.QuizResults"
            android:label="@string/title_activity_quiz_results"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar" />
        <activity android:name=".quiz.CompetitiveMode.QuizGame" />
        <activity android:name=".onthisday.OnThisDay" />
        <activity android:name=".SetUp.SignInActivity" />
        <activity android:name=".SetUp.Registration" />
        <activity android:name=".SetUp.LoginActivity" />
        <activity android:name=".reading.readingHome" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".SetUp.LoadingAnimation"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>